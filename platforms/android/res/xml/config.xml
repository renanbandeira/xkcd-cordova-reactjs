<?xml version='1.0' encoding='utf-8'?>
<widget id="com.greenmile.renanbandeira.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <hook src="hooks/build.sh" type="before_prepare" />
    <name>DesafioApp</name>
    <description>
        Desafio - Processo Seletivo Greenmile
    </description>
    <author email="email@renanbandeira.com.br" href="http://www.renanbandeira.com.br">
        Renan Bandeira de Melo Gondim
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="background" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
