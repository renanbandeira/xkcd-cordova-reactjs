<?xml version='1.0' encoding='utf-8'?>
<widget id="com.greenmile.renanbandeira.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<hook type="before_prepare" src="hooks/build.sh" />
    <name>DesafioApp</name>
    <description>
        Desafio - Processo Seletivo Greenmile
    </description>
    <author email="email@renanbandeira.com.br" href="http://www.renanbandeira.com.br">
        Renan Bandeira de Melo Gondim
    </author>
		<preference name = "SplashScreen" value = "background" />
		<preference name = "SplashScreenDelay" value = "3000" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
